<div id="modal" _="on closeModal add .closing then wait for animationend then remove me">
	<div class="modal-content">
    <form id="deleteListDialog" hx-delete="/list/{{ . }}" hx-swap="outerHTML">
      <div class="dialog-field">
        <label>Are you sure you want to delete this list and all it's items?</label>
        <input type="hidden" name="confirm" value="true">
      </div>
      <div class="dialog-buttons">
        <button type="submit" _="on click remove #list_{{ . }} then trigger closeModal">Yes</button>
        <button type="button" hx-get="/list/{{ . }}" hx-target="#modal" hx-swap="outerHTML">No</button>
      </div>
    </form>
  </div>
</div>
